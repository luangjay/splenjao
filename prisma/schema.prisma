// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    // NOTE: When using postgresql, mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

model Example {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Lobby {
    id              String    @id @default(auto()) @map("_id") @db.ObjectId
    hostId          String?   @db.ObjectId @unique
    playerCount     Int
    playerIds       String[]  @db.ObjectId
    players         Player[]
    // host            Player    @relation(fields: [hostId], references: [id], name: "hostLobby")
}

enum Color {
    white
    blue
    green
    red
    black
}

type Price {
    white   Int
    blue    Int
    green   Int
    red     Int
    black   Int
}

model Card {
    id      Int       @id @map("_id")
    color   Color
    level   Int
    price   Price
    score   Int
}

model Tile {
    id      Int       @id @map("_id")
    price   Price
    score   Int
}

type Shuffle {
    card1_ids   Int[]
    card2_ids   Int[]
    card3_ids   Int[]
    tile_ids    Int[]
}

enum Status {
    initial
    active
    inactive
    final
}

type Turn {
    playerIdx       Int
    startTime       DateTime
}

enum ActionType {
    takeThree
    takeTwo
    return
    purchase
    reserve
}

type TokenList {
    white   Int
    blue    Int
    green   Int
    red     Int
    black   Int
    gold    Int
}

type Action {
    endTurn     Boolean
    type        ActionType?
    tokenList   TokenList
    cardId      Int
}

type PlayerCard {
    i0      Int[]
    i1      Int[]
    i2      Int[]
    i3      Int[]
}

type PlayerTile {
    i0      Int[]
    i1      Int[]
    i2      Int[]
    i3      Int[]
}

type PlayerToken {
    i0      TokenList
    i1      TokenList
    i2      TokenList
    i3      TokenList
}

type PlayerScore {
    i0      Int
    i1      Int
    i2      Int
    i3      Int
}

type PlayerDiscount {
    i0      Price
    i1      Price
    i2      Price
    i3      Price
}

type PlayerReserve {
    i0      Int[]
    i1      Int[]
    i2      Int[]
    i3      Int[]
}

