type Resource {
    cardsLv1     Int[]
    cardsLv2     Int[]
    cardsLv3     Int[]
    tiles        Int[]
    tokens       Tokens
}

type Inventory {
    cards           Int[]
    reserves        Int[]
    tiles           Int[]
    tokens          Tokens
    discount        Price
    score           Int
}

model Game {
    id              String          @id @default(auto()) @map("_id") @db.ObjectId
    hostId          String          @db.ObjectId @unique
    playerCount     Int
    playerIds       String[]        @db.ObjectId
    createdAt       DateTime
    endedAt         DateTime?
    status          String
    turnIdx         Int
    resource        Resource
    inventory0      Inventory
    inventory1      Inventory
    inventory2      Inventory
    inventory3      Inventory
    players         Player[]        @relation(fields: [playerIds], references: [id])
    winnerId        String?         @db.ObjectId
    winnerScore     Int?
}

model Player {
    id              String      @id @map("_id") @db.ObjectId
    name            String?
    image           String?
    lobbyId         String?     @db.ObjectId
    gameCount       Int
    gameIds         String[]    @db.ObjectId
    lastPlayed      DateTime?
    lobby           Lobby?      @relation(fields: [lobbyId], references: [id])
    games           Game[]      @relation(fields: [gameIds], references: [id])
}

// Necessary for Next auth
model Account {
    id                String  @id @default(auto()) @map("_id") @db.ObjectId
    userId            String  @db.ObjectId
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? // @db.Text
    access_token      String? // @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? // @db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    sessionToken String   @unique
    userId       String   @db.ObjectId
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

