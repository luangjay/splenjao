model Game {
    id              String      @id @default(auto()) @map("_id") @db.ObjectId
    hostId          String      @db.ObjectId @unique
    playerCount     Int
    playerIds       String[]    @db.ObjectId
    // host            Player       @relation(fields: [hostId], references: [id], name: "hostGame")
    shuffle         Shuffle
    status          Status
    turn            Turn
    endTurn         Turn
    nextTurn        Turn
    action          Action
    tokenList       TokenList
    playerScore     PlayerScore
    playerCard      PlayerCard
    playerTile      PlayerTile
    playerToken     PlayerToken
    playerDiscount  PlayerDiscount
    playerReserve   PlayerReserve
    players         Player[]    @relation(fields: [playerIds], references: [id])
}

model Player {
    id              String      @id @map("_id") @db.ObjectId
    name            String?
    image           String?
    lobbyId         String?     @db.ObjectId
    // hostLobbyId     String
    // hostLobby       Lobby?      @relation(name: "hostLobby")
    gameCount       Int
    gameIds         String[]    @db.ObjectId
    lastPlayed      DateTime?
    // hostGameId      String?
    // hostGame        Game?       @relation(name: "hostGame")
    // user            User        @relation(fields: [id], references: [id])
    lobby           Lobby?      @relation(fields: [lobbyId], references: [id])
    games           Game[]      @relation(fields: [gameIds], references: [id])
}

// Necessary for Next auth
model Account {
    id                String  @id @default(auto()) @map("_id") @db.ObjectId
    userId            String  @db.ObjectId
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? // @db.Text
    access_token      String? // @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? // @db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    sessionToken String   @unique
    userId       String   @db.ObjectId
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

